<Window x:Class="CourseProj.AddAffair"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProj"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Картотека Інтерполу - Додавання особової справи" Height="750" Width="950" WindowStyle="ThreeDBorderWindow" FontFamily="Verdana" Icon="/interpollogo.png" ResizeMode="CanResize" WindowStartupLocation="Manual" WindowState="Maximized">
    <ScrollViewer>
    <Grid x:Name="AddMainRoot" Background="#FF8FCDFF" MinHeight="700" MinWidth="900">
        <Border MinWidth="800" Background="White" VerticalAlignment="Center" Margin="20" Padding="20" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="#0076D6" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock x:Name="TopText" Text="Уведіть дані про злочинця:"  HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="24" Margin="0 0 0 10" FontWeight="Bold" OpacityMask="Black" Foreground="#FF00345E"/>

                <TextBox materialDesign:HintAssist.Hint ="Ім'я злочинця" x:Name="textBoxName" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Прізвище злочинця" x:Name="textBoxSurname" Style = "{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Прізвисько (позивний) злочинця" x:Name="textBoxNickname" Style = "{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Зріст злочинця" x:Name="textBoxHeight" Style = "{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Колір очей злочинця" x:Name="textBoxEyeColor" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Колір волосся злочинця" x:Name="textBoxHairColor" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Громадянство злочинця" x:Name="textBoxCitizenship" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Дата народження злочинця" x:Name="textBoxBirthday" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Місце народження злочинця" x:Name="textBoxBirthPlace" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Останнє місце проживання злочинця" x:Name="textBoxLastAccomodation" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Перелік мов, якими володіє злочинець" x:Name="textBoxLanguages" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Злочинна професія" x:Name="textBoxJob" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <TextBox materialDesign:HintAssist.Hint ="Остання справа злочинця" x:Name="textBoxLastAffair" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>
                <CheckBox x:Name="checkBoxIsInBand" Margin="0 10" Checked="checkBox_Checked" >Злочинець є членом злочинного угрупування (банди)</CheckBox>
                <!--<TextBox materialDesign:HintAssist.Hint ="Назва банди, членом якої є злочинець" x:Name="textBoxBandName" Style = "{StaticResource MaterialDesignFloatingHintTextBox}" ></TextBox>-->

                <Button x:Name="AddData" Click="AddData_Click" Content="Внести злочинця до бази Інтерполу" Margin="50 5" FontSize="20" MinHeight="40" BorderBrush="#FF00345E">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF0076D6"/>
                            <GradientStop Color="#FF0061AF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
    </ScrollViewer>
</Window>
